{
  "name": "next-turbo-app",
  "packageManager": "yarn@3.6.1",
  "private": true,
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "initiate": "node index",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types --concurrency=4",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,scss,css,json,md}\"",
    "check-format": "prettier --check \"**/*.{js,ts,tsx,scss,css,json}\"",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "fix-lint": "eslint . --ext ts --ext tsx --ext js --fix",
    "fix-all": "npm run fix-lint && npm run format",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.7",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-custom": "*",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "turbo": "^1.10.7"
  }
}
